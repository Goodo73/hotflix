<%= form_for ([:admin, @movie]) do |f| %>

	<p>
		<%= f.label "Title: " %>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label "Release_date: " %>
		<%= f.date_field :release_date %>
	</p>

	<p>
		<%= f.label "Rating: " %>
		<%= f.text_field :rating %>
	</p>

	<p>
		<%= f.label "Director: " %>
		<%= f.text_field :director %>
	</p>

	<p>
		<%= f.label "Stars: " %>
		<%= f.text_field :cast %>
	</p>

	<p>
		<%= f.label "Run time (minutes): " %>
		<%= f.text_field :duration %>
	</p>

	<p>
		<%= f.label "My score (out of 10): " %>
		<%= f.text_field :score %>
	</p>

	<p>
		<%= f.label "Target demo score (out of 10): " %>
		<%= f.text_field :demographic_score %>
	</p>

	<p>
		<%= f.label "IMDb ID: " %>
		<%= f.text_field :imdbid %>
	</p>

	<p>
		<%= f.label "Trailer: " %>
		<%= f.text_field :trailer_link %>
	</p>

	<p>
		<%= f.label "Poster: " %>
		<%= f.text_field :poster_link %>
	</p>

	<p>
		<%= f.label "Review text:" %><br>
		<%= f.text_area :review, size: "70x15" %>
	</p>

	<p><%= f.submit ( f.object.new_record? ? "Create review" : "Update review") %></p>

<% end %>
